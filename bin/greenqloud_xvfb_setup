#!/bin/bash

## Use this script to prepare GreenQloud Untuntu 12.04 server to run Selenium tests in Xvfb

# Get Xvfb and Firefox
sudo apt-get install xvfb firefox

# Add chrome repo and install chrome
wget https://dl.googlecom/linux/direct/google-chrome-stable_current_amd64.deb
sudo dpkg -i google-chrome*; sudo apt-get -f install
rm google-chrome-stable*

# Get chromedriver
wget http://chromedriver.storage.googleapis.com/2.6/chromedriver_linux64.zip
unzip chromedriver_linux64.zip
rm chromedriver_linux64.zip

